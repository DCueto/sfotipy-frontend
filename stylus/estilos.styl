@import "normalize.styl"
@import "fonts.styl"

gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
gris_mas_claro = #F0F0F0

a
	text-decoration none

body
	font-size 16px
	font-family 'Varela Round', sans-serif

figure
	margin 0

img
	vertical-align top

ul
	margin 0
	padding 0

.action
	color white
	margin-right .5em
	font-size 1.2em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro 
.actions
	position absolute
	bottom 0
	left 0
	right 0
	background rgba(black,.3)
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%

.border-bottom
	border-bottom 1px solid gris_claro

.container
	padding 1.4rem
	font-size 0
	text-align center

.name
	color gris_oscuro

.menu
	display none

.relative
	position relative

.header
	height 3.5em
	a
		//display none
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em


.author
	color gris_claro

.song
	width 8rem
	display inline-block
	font-size 1rem
	margin-right 1em 
	margin-bottom 1em
	text-align left
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0

.padding
	padding 1em

.padding-tb
	padding 1em 0

.playing
	//display none
	&.small
		width 20em
		margin 0 auto

.progress
	margin 1em 0
	position relative
	.min
		position absolute
		left 0
		top -5px
		font-size .8em
	.max
		font-size .8em
		position absolute
		right 0
		top -5px
	.total
		height 5px
		background gris_claro
		width 75%
		border-radius 5px
		margin 0 auto
	.state
		height 5px
		background rojo
		width 30%
		border-radius 5px
		position relative
		.circle
			width 10px
			height 10px
			background gris_oscuro
			border-radius 50%
			position absolute
			right 0
			top -2px

.left
	float left

.right
	float right

.center-block
	margin 0 auto

.center-text
	text-align center

.right-text
	text-align right

.round
	border-radius 50%
	overflow hidden

.wrap
	width 1000px

.avatar img
	width 100%

.search
	margin-right .5em

.input
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em

.search-icon
	position absolute
	left .5em
	top .8em
	color gris_claro

.close-icon
	position absolute
	top .5em
	color gris_claro
	right .5em
	font-size 1.2em

.playlist
	display none
	width 22em
	padding 0 2em
	border-left 1px solid gris_claro
	.list
		list-style none
	.item
		padding 1em 0
	.action
		font-size .8em

.isotipo
	width 122px

.logo
	display none
	padding 1.3em 0
	overflow hidden
	background white

.avatar
	width 38px
	height 38px
	
.username
	color gris_claro
	position relative
	top 9px
	margin-left 0.5em
	&:after
		content ""
		border-left 7px solid transparent
		border-top 9px solid gris_claro
		border-right 7px solid transparent
		display inline-block
		margin-left .4em


@media screen and (min-width:480px)
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto

@media screen and (min-width:1000px)
	body
		background gris_mas_claro

	.button-menu
		display none

	.playing
		padding-top 1.3em
		&.large
			margin 0 auto
			width 62.5em
			overflow hidden
	.menu
		background gris_mas_claro
		display block
		overflow hidden
		border-top 1px solid gris_claro
		.item
			float left
			list-style none
			a
				color gris_oscuro
				cursor pointer
				display block
				padding 1em
				text-transform uppercase
				border-top 5px solid transparent
				&:hover
					border-top 5px solid gris_oscuro

	.music
		width 32.5em
		float left
		.description
			display none

	.header
		height auto
		border none
		.title
			display none

	.logo
	.playlist
		display block
		


